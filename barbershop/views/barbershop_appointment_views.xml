<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="barbershop_appointment_view_form" model="ir.ui.view">
        <field name="name">barbershop.appointment.view.form</field>
        <field name="model">barbershop.appointment</field>
        <field name="arch" type="xml">
            <form string="Citas">
                <sheet>
                    <group>
                        <field name="name"></field>
                        <field name="partner_id"></field>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="service_ids" widget="many2many_tags"></field>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="barbershop_appointment_view_tree" model="ir.ui.view">
        <field name="name">barbershop.appointment.view.tree</field>
        <field name="model">barbershop.appointment</field>
        <field name="arch" type="xml">
            <tree string="Citas">
                <field name="name"></field>
                <field name="partner_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="barbershop_appointment_view_kanban" model="ir.ui.view">
        <field name="name">barbershop.appointment.view.kanban</field>
        <field name="model">barbershop.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings row">
                                    <div class="col-12">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Cliente: <field name="partner_id"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Desde: <field name="start_time"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Hasta: <field name="end_time"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_barbershop_appointment_search" model="ir.ui.view">
        <field name="name">barbershop.appointment.view.search</field>
        <field name="model">barbershop.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Solicitado" name="state_solicitado" domain="[('state', '=', 'requested')]"/>
                <filter string="Confirmado" name="state_solicitado" domain="[('state', '=', 'confirmed')]"/>
                <filter string="LlegÃ³" name="state_solicitado" domain="[('state', '=', 'arrived')]"/>
                <filter string="Siendo atendido" name="state_solicitado" domain="[('state', '=', 'in_service')]"/>
                <filter string="Finalizado" name="state_solicitado" domain="[('state', '=', 'completed')]"/>
                <filter string="Cancelado" name="state_solicitado" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Estado" name="group_by_state_id" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Cliente" name="group_by_partner_id" domain="[]" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="barbershop_appointment_action" model="ir.actions.act_window">
        <field name="name">Citas</field>
        <field name="res_model">barbershop.appointment</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
