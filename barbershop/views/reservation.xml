<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="reservation" name="Reservation Template">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty reservation-barbershop">
                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <header>
                        <h1>Reservar una Cita</h1>
                        <h4>Selecciona los detalles de tu cita</h4>
                    </header>
                    <div class="container">
                        <form id="reservation_form" action="javascript:void(0);" method="post" class="o_mark_required">
                            <div class="form-group">
                                <label for="partner_id">Cliente<span class="text-danger">*</span></label>
                                <select class="form-control" name="partner_id" id="partner_id">
                                    <option value="">Seleccione un cliente</option>
                                    <t t-foreach="partner_list" t-as="partner" t-key="partner.id">
                                        <option t-att-value="partner.id">
                                            <t t-esc="partner.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>

                            <div class="form-group s_website_form_field">
                                <label for="start_at">Desde<span class="s_website_form_mark">*</span></label>
                                <input type="datetime-local" class="form-control s_website_form_input" name="start_at" id="start_at" required="true"/>
                            </div>

                            <div class="form-group">
                                <label for="service_id">Servicio<span class="text-danger">*</span></label>
                                <select class="form-control" name="service_id" id="service_id">
                                    <option value="">Seleccione un servicio</option>
                                    <t t-foreach="service_list" t-as="service" t-key="service.id">
                                        <option t-att-value="service.id">
                                            <t t-esc="service.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="employee_id">Barbero<span class="text-danger">*</span></label>
                                <select class="form-control" name="employee_id" id="employee_id">
                                    <option value="">Seleccione un barbero</option>
                                    <t t-foreach="employee_list" t-as="employee" t-key="employee.id">
                                        <option t-att-value="employee.id">
                                            <t t-esc="employee.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>

                            <div class="mb-0 py-2 col-12 d-flex justify-content-center">
                                <button type="button" class="btn btn-primary submit-form btn-lg">Reservar</button>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
