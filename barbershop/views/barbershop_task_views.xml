<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="barbershop_task_view_tree" model="ir.ui.view">
        <field name="name">barbershop.task.view.tree</field>
        <field name="model">barbershop.task</field>
        <field name="arch" type="xml">
            <tree string=""> 
                <field name="name"/>
                <field name="description"/>
                <field name="deadline"/>
                <field name="employee_id"/>
                <field name="priority"/>
                <field name="state"/>
            </tree>
        </field>
    </record>   

    <record id="barbershop_task_view_form" model="ir.ui.view">
        <field name="name">barbershop.task.view.form</field>
        <field name="model">barbershop.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>    
                            <field name="state"/>      
                        </group> 
                        <group>
                            <field name="deadline"/>
                            <field name="priority"/>
                        </group> 
                        <notebook>
                            <page string="Descripcion" name="description">
                                <field name="description"/>
                            </page>
                        </notebook>                 
                    </group>
                </sheet>
             </form>
        </field>
    </record>

    <record id="barbershop_task_view_kanban" model="ir.ui.view">
        <field name="name">barbershop.task.view.kanban</field>
        <field name="model">barbershop.task</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state" sample="1">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings row">
                                    <div class="col-12">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Nombre: <field name="name"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Encargado: <field name="employee_id"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Fecha limite: <field name="deadline"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Priodidad: <field name="priority"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="barbershop_task_action" model="ir.actions.act_window">
        <field name="name">Tareas</field>
        <field name="res_model">barbershop.task</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>
