<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="barbershop_task_view_tree" model="ir.ui.view">
        <field name="name">barbershop.task.view.tree</field>
        <field name="model">barbershop.task</field>
        <field name="arch" type="xml">
            <tree string=""> 
                <field name="name"/>
                <field name="description"/>
                <field name="deadline"/>
                <field name="employee"/>
                <field name="priority"/>
            </tree>
        </field>
    </record>   

    <record id="barbershop_task_action" model="ir.actions.act_window">
        <field name="name">Tareas</field>
        <field name="res_model">barbershop.task</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
