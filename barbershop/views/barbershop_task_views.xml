<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="barbershop_task_view_form" model="ir.ui.view">
        <field name="name">barbershop.task.view.form</field>
        <field name="model">barbershop.task</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                            <field name="employee_id"></field>
                            <field name="state" options="{'no_create': True}"/>
                             <field name="priority"></field>
                            
                        </group>
                        <group>
                            <field name="end_at"></field>
                        </group>
                        <notebook>
                            <page string="Descripcion" name="description">
                                <field name="description"></field>
                            </page>
                                 <page string="Servicios" name="service_ids">
                                <field name="service_ids" widget="many2many"></field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    

    <record id="barbershop_task_view_tree" model="ir.ui.view">
        <field name="name">barbershop.task.view.tree</field>
        <field name="model">barbershop.task</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"></field>
                <field name="employee_id"></field>
                <field name="end_at"></field>
                <field name="state"></field>
                <field name="priority"></field>
            </tree>
        </field>
    </record>
    

    <record id="barbershop_task_view_search" model="ir.ui.view">
        <field name="name">barbershop.task.view.search</field>
        <field name="model">barbershop.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
            </search>
        </field>
    </record>

    <record id="barbershop_task_view_kanban" model="ir.ui.view">
        <field name="name">barbershop.task.view.kanban</field>
        <field name="model">barbershop.task</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state" sample="1">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings row">
                                    <div class="col-12">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Empleado: <field name="employee_id"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Hasta: <field name="end_at"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    

    <record id="barbershop_task_action" model="ir.actions.act_window">
        <field name="name">Tareas</field>
        <field name="res_model">barbershop.task</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
