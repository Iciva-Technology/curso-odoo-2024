<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="barbershop_tasks_view_form" model="ir.ui.view">
        <field name="name">barbershop.tasks.view.form</field>
        <field name="model">barbershop.tasks</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                            <field name="employee_id"></field>
                            <field name="realted_service_ids"></field>
                        </group>
                        <group>
                            <field name="state"></field>
                            <field name="priority"></field>
                            <field name="deadline"></field>
                        </group>
                        <notebook>
                            <page string="Descripcion" name="description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="barbershop_tasks_view_tree" model="ir.ui.view">
        <field name="name">barbershop.tasks.view.tree</field>
        <field name="model">barbershop.tasks</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"></field>
                <field name="state"></field>
                <field name="deadline"></field>
                <field name="priority"></field>
                <field name="employee_id"></field>
                <field name="realted_service_ids"></field>
            </tree>
        </field>
    </record>

    <record id="barbershop_tasks_view_search" model="ir.ui.view">
        <field name="name">barbershop.tasks.view.search</field>
        <field name="model">barbershop.tasks</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Empleado" name="group_by_employee_id" domain="[]" context="{'group_by': 'employee_id'}"/>
                    <filter string="Prioridad" name="group_by_state" domain="[]" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="barbershop_tasks_view_kanban" model="ir.ui.view">
        <field name="name">barbershop.tasks.view.kanban</field>
        <field name="model">barbershop.tasks</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state" sample="1">
                <templates>
                    <t t-name="kanban-box">
                       <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings row">
                                    <div class="col-12">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Empleado: <field name="employee_id"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Estado: <field name="state"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Fecha_Limite: <field name="deadline"/></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span>Prioridad: <field name="priority"/></span>
                                </div>
                            </div>
                        </div> 
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_barbershop_tasks" model="ir.actions.act_window">
        <field name="name">Tareas</field>
        <field name="res_model">barbershop.tasks</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>
